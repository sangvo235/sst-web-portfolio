generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "darwin-arm64", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id               String @id @default(uuid())
  authorId         String
  authorFirstName  String
  authorLastName   String
  authorImage      String
  title            String 
  readTime         String
  imageUrl         String
  content          String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  comments         Comment[]
}

model Comment {
  id               String     @id @default(uuid())
  authorId         String
  authorFirstName  String
  authorLastName   String
  authorImage      String
  content          String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  post             BlogPost   @relation(fields: [postId], references: [id])
  postId           String
}

model Experience {
  id               String   @id @default(cuid())
  imageUrl         String
  title            String
  company          String
  dateStart        DateTime
  dateEnd          DateTime?
  description      String
  skills           String[]
}

model Education {
  id               String   @id @default(cuid())
  imageUrl         String
  title            String
  name             String
  dateStart        DateTime
  dateEnd          DateTime?
  description      String
}